<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/addAuthorizationEditTextAuthorization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Authorization"
        android:inputType="text" />

    <EditText
        android:id="@+id/addAuthorizationEditTextSsid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SSID"
        android:inputType="text" />

    <EditText
        android:id="@+id/addAuthorizationEditTextNetworkHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Network host"
        android:inputType="text" />

    <EditText
        android:id="@+id/addAuthorizationEditTextNetworkPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Network port"
        android:inputType="number" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="100dp">

    <TextClock
        android:id="@+id/textClockTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:text="23:46"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextClock
        android:id="@+id/textClockDate"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:format12Hour="E, d."
        android:format24Hour="E, d."
        android:text="Tue, 27."
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textClockTime"
        app:layout_constraintTop_toBottomOf="@+id/textClockTime" />

</android.support.constraint.ConstraintLayout>



